{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}

{% block page_product_detail_ordernumber_container %}
    {% if not flinkQuickView or not config('FlinkQuickView.config.hideProductNumber') %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block page_product_detail_configurator_include %}
    {% if flinkQuickView %}
        {% if page.product.parentId and page.configuratorSettings|length > 0 %}
            <div class="product-detail-configurator-container">
                {% sw_include '@Storefront/storefront/page/product-detail/configurator.html.twig' with {
                    'flinkQuickView': true
                } %}
            </div>
        {% endif %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

