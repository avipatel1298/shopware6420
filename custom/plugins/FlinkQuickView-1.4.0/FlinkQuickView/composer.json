{
    "name": "flink/quick-view",
    "description": "Artikel-Schnellansicht in der Kategorie-Ansicht",
    "version": "1.4.0",
    "type": "shopware-platform-plugin",
    "license": "proprietary",
    "authors": [
        {
          "name": "FlinkFactory",
          "homepage": "https://flinkfactory.com",
          "email": "shopware@flinkfactory.com"
        }
    ],
    "require": {
        "shopware/core": "*",
        "shopware/storefront": "*"
    },
    "autoload": {
        "psr-4": {
            "Flink\\QuickView\\": "src/"
        }
    },
    "extra": {
        "shopware-plugin-class": "Flink\\QuickView\\FlinkQuickView",
        "plugin-icon": "src/Resources/config/plugin.png",
        "copyright": "(c) by FlinkFactory",
        "label": {
            "de-DE": "Produkt-Schnellansicht für Produkt-Boxen",
            "en-GB": "Item Quickview in product boxes"
