<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--User Bought Product Slider-->
        <service
            id="ICTECHQuickViewPopupWithPastPurchasedProduct\Core\Content\Product\Cms\IctechUserBoughtProductsSliderCmsElementResolver">
            <argument type="service" id="order_customer.repository"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="sales_channel.product.repository"/>
            <tag name="shopware.cms.data_resolver"/>
        </service>
        <!--Products Review Slider-->
        <service
            id="ICTECHQuickViewPopupWithPastPurchasedProduct\Core\Content\Product\Cms\IctechProductsReviewSliderCmsElementResolver">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="product_review.repository"/>
            <tag name="shopware.cms.data_resolver"/>
        </service>
        <!-- Quickview Popup Controller -->
        <service id="ICTECHQuickViewPopupWithPastPurchasedProduct\Storefront\Controller\QuickViewPopUpController"
                 public="true">
            <argument type="service" id="product.repository"/>
            <tag name="controller.service_arguments"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
