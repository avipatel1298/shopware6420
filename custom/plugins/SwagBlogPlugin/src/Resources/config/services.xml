<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!--Translation Definition-->
        <service id="SwagBlogPlugin\Core\Content\SwagBlog\Aggregate\SwagBlogTranslation\BlogTranslationDefinition">
            <tag name="shopware.entity.definition" entity="blog_translation"/>
        </service>
        <service
            id="SwagBlogPlugin\Core\Content\SwagBlogCategory\Aggregate\SwagBlogCategoryTranslation\BlogCategoryTranslationDefinition">
            <tag name="shopware.entity.definition" entity="blog_category_translation"/>
        </service>
        <!--Translation Definition-->

        <!--Definition Services-->
        <service id="SwagBlogPlugin\Core\Content\SwagBlog\BlogDefinition">
            <tag name="shopware.entity.definition" entity="blog"/>
        </service>
        <service id="SwagBlogPlugin\Core\Content\SwagBlogCategory\BlogCategoryDefinition">
            <tag name="shopware.entity.definition" entity="blog_category"/>
        </service>
        <service id="SwagBlogPlugin\Core\Content\ProductMappingDefinition">
            <tag name="shopware.entity.definition" entity="blog_product"/>
        </service>

        <service id="SwagBlogPlugin\Core\Content\CategoryMappingDefinition">
            <tag name="shopware.entity.definition" entity="blog_category_mapping"/>
        </service>
        <!--Definition Services-->

        <!--Product Extension Service-->
        <service id="SwagBlogPlugin\Extension\ProductExtension">
            <tag name="shopware.entity.extension"/>
        </service>
        <!--Product Extension Service-->

        <!--Language Extension service-->
        <service id="SwagBlogPlugin\Extension\LanguageExtension">
            <tag name="shopware.entity.extension"/>
        </service>
        <!--Language Extension service-->

        <!--Blog Element Resolver-->
        <service id="SwagBlogPlugin\Core\Content\blogImages\cms\blogImageCmsElementResolver">
            <tag name="shopware.cms.data_resolver"/>
            <argument type="service" id="Shopware\Core\Content\Media\Cms\DefaultMediaResolver"/>
        </service>
        <!--Blog Element Resolver-->
    </services>
</container>
